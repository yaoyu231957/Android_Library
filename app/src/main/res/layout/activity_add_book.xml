<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_add_book_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="添加图书信息"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/ll_add_book_middle_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_add_book_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书编号" />

            <EditText
                android:id="@+id/et_book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书名称" />

            <EditText
                android:id="@+id/et_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书数量" />

            <EditText
                android:id="@+id/et_book_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书标签" />

            <EditText
                android:id="@+id/et_book_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:hint="不同标签用&amp;连接,允许可选标签为
文学与艺术&amp;科学与技术&amp;社会科学&amp;历史与人文&amp;生活与健康"
                android:ems="10" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书介绍" />

            <EditText
                android:id="@+id/et_book_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_book_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书位置" />

            <EditText
                android:id="@+id/et_book_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="x层-xyy室-yyy书架-xxxx"
                android:ems="10" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_add_book_middle_wrap"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="保存" />

        <Button
            android:id="@+id/btn_cancel_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="取消" />

    </LinearLayout>

</RelativeLayout>